<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item
                android:gravity="center"
                android:drawable="@drawable/vc_category"
                android:bottom="10dp"/>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item
                android:gravity="center"
                android:drawable="@drawable/vc_category"
                android:bottom="10dp"/>
            <item android:drawable="@drawable/vc_dot"
                android:width="7dp"
                android:height="7dp"
                android:gravity="bottom|center"/>
        </layer-list>
    </item>
</selector>